<core:View xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:l="sap.ui.layout"
	xmlns="sap.m" controllerName="templateHackaton.domain.home.home" 
	xmlns:html="http://www.w3.org/1999/xhtml" displayBlock="true">
	<Page  showHeader="true" enableScrolling="true" title="{i18n>appTitulo}">
		<headerContent>
			<Image class="imagemCabecalhoPetrobras" src="content/images/marca_petrobras.png" />
			<Image class="logoCabecalhoPetrobras" src="content/images/logo_petrobras.png" />
		</headerContent>
		<!--titulos rotativos -->
		<html:section class="rw-wrapper">
			<html:h2 class="rw-sentence">
				<html:span>AbrangeSMS</html:span>
			</html:h2>
		</html:section>
		<!--fim dos titulos rotativos -->

		<!-- Cards com os principais templates -->
		<TileContainer class= "imagemRodapeInicio">
			<StandardTile icon= "sap-icon://add" 
			 title= "Novo Alerta"
			 press="onNovoAlerta" />
			 
			<StandardTile icon= "sap-icon://hint" 
			 title= "Mestre/Detalhe"
			 press="onNavegaMestreDetalhe" />
		</TileContainer>

	</Page>
</core:View>