<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">

<Popover id="poNovoEstado"
		title="Novo Estado"
		class="sapUiContentPadding"
		placement="auto">

<f:Form 
			editable="true">
			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanXL="12"
					labelSpanL="12"
					labelSpanM="12"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="10"
					emptySpanL="10"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="1"
					columnsL="1"
					columnsM="1"
					singleContainerFullSize="false" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>
						<f:FormElement label="Sigla">
							<f:fields>
								<Input valueLiveUpdate="true" value="{viewModel>sigla}" maxLength="2"/>
							</f:fields>
						</f:FormElement>

                       <f:FormElement label="Nome">
							<f:fields>
								<Input valueLiveUpdate="true" value="{viewModel>nome}"/>
							</f:fields>
						</f:FormElement>


                    </f:formElements>
                </f:FormContainer>
			</f:formContainers>
		</f:Form>

		<footer>
			<Toolbar>
				<Button  text="Salvar" type="Accept" enabled="{= !!${viewModel>sigla} &amp;&amp; !!${viewModel>nome}}" icon="sap-icon://edit" press=".estadoService.onGravaNovoEstado" />
			</Toolbar>
		</footer>
	</Popover>

</core:FragmentDefinition>