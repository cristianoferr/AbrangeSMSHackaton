<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    >
    <Dialog id="poListaDialogs"
    resizable="true" draggable="true" 
		title="Estados"
        contentWidth="40%" contentHeight="auto"
		class="sapUiContentPadding"
		>
        
        <Table width="100%" 
                id="tableEstados"
                items="{path:'/Estados'}"
                noDataText="Nenhum campo definido"
                fixedLayout="false"
                growing="false">
                <columns>
                    <Column width="5rem" hAlign="Right" vAlign="Center"></Column>
                    <Column hAlign="Left"></Column>
                </columns>
                <ColumnListItem >
                    <Label text="{sigla}"/>
                    <Label text="{nome}"/>
                    
                </ColumnListItem>
            </Table> 


        <beginButton>
            <Button icon="sap-icon://accept" type="Emphasized" text="Salvar" press=".estadoService.onFechaDialogo"/>
        </beginButton>
        <endButton>
            <Button icon="sap-icon://decline" type="Transparent" press=".estadoService.onFechaDialogo"/>
        </endButton>
		
	</Dialog>
</core:FragmentDefinition>