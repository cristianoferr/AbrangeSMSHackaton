<core:View xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:l="sap.ui.layout" 
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" 
    xmlns="sap.m" controllerName="templateHackaton.domain.estados.consulta.estado" 
    xmlns:html="http://www.w3.org/1999/xhtml" displayBlock="true">
  
<Page id="pgEstado" showHeader="true" enableScrolling="true" title="{sigla} - {nome}">
    <headerContent>
        <Image class="imagemCabecalhoPetrobras" src="{device>/rootPath}content/images/marca_petrobras.png" />
        <Image class="logoCabecalhoPetrobras" src="{device>/rootPath}content/images/logo_petrobras.png" />
    </headerContent>
	  <ObjectHeader id="oh1"
        backgroundDesign="Translucent">
        <attributes>
            <ObjectAttribute title="Sigla" text="{sigla}" />
            <ObjectAttribute title="Nome" text="{nome}" />
        </attributes>
    </ObjectHeader>
</Page>

</core:View>