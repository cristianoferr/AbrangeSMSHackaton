<core:FragmentDefinition
	xmlns="sap.m"
    xmlns:l="sap.ui.layout" 
    xmlns:tnt="sap.tnt"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" 
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">

    <!--<l:VerticalLayout width="100%">
        <Label class="titulo" text="CUIDADOS SUGERIDOS" design="Normal" />
        <Text text="{path:'cuidados',formatter:'.juntaTexto'}"/>
    </l:VerticalLayout>-->
    <l:VerticalLayout width="100%">
        <Label class="titulo" text="CUIDADOS SUGERIDOS" design="Normal" />
        <Table width="100%" 
                                id="tableCuidados"
                                items="{path:'cuidados', sorter: { 
                                path: 'passo',
                                descending: false,
                                group:false }}"
                            noDataText="Nenhum cuidado definido"
                            fixedLayout="false"
                            growing="false">
                            <columns>
                                <Column width="2rem" hAlign="Left"></Column>
                                <Column width="100%" hAlign="Left"></Column>
                            </columns>
                            <ColumnListItem >
                                <l:VerticalLayout width="100%">
                                    <ToggleButton icon="sap-icon://up" enabled="{= ${userVotou}!==1}" pressed="{= ${userVotou}===1}"  app:voto="1" type="Transparent" press="userVote"/>
                                    <Input editable="false" value="{votos}" class="voteCounter"/>
                                    <ToggleButton icon="sap-icon://down" enabled="{= ${userVotou}!==-1}" pressed="{= ${userVotou}===-1}" app:voto="-1" type="Transparent" press="userVote"/>
                                </l:VerticalLayout>
                                	
                                <l:VerticalLayout width="100%">
                                    <Text text="{passo}. {descricao}"/>
                                    <l:HorizontalLayout width="100%" class="floatRight">
                                        <ToggleButton icon="sap-icon://up" enabled="{= ${userVotou}!==1}" pressed="{= ${userVotou}===1}"  app:voto="1" type="Transparent" press="userVote"/>
                                    </l:HorizontalLayout>
                                </l:VerticalLayout>
                              
                            </ColumnListItem>
                        </Table>
    </l:VerticalLayout>
    

</core:FragmentDefinition>