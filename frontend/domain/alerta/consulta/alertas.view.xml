<core:View xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:l="sap.ui.layout" 
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" 
    xmlns="sap.m" controllerName="templateHackaton.domain.alerta.consulta.alertas" 
    xmlns:html="http://www.w3.org/1999/xhtml" displayBlock="true">
  
<Page showHeader="true" showNavButton="true" navButtonPress="onNavBack" title="{i18n>appTitulo}" enableScrolling="true">

    <Toolbar>
        <SearchField id="searchField" placeholder="{i18n>searchPlaceholder}"  search="onSearch" value="{localModel>/searchAlertas}" showRefreshButton="false" width="100%" />
        <Button tooltip="Filtro" icon="sap-icon://drop-down-list" press="onFilterButtonPressed" />
    </Toolbar>
     <List id="lista" selectionChange="onItemListaSelected" mode="SingleSelectMaster" items="{ path: '/Alertas', sorter: { 
                    path: 'sigla',
                    descending: false,
                    group:false }}">
            <ObjectListItem title="{titulo}" class="quebraLinha" app:id="{id}">
                <firstStatus>
                    <ObjectStatus text="{tipoAlerta}"  />
                </firstStatus>
                <secondStatus>
                    <ObjectStatus text="{path:'status',formatter:'.traduzStatus'}"  state="{path:'status', formatter:'.getStateStatus'}" />
                </secondStatus>
                 <attributes>
                    <ObjectAttribute  text= "Ocorrido em: {dataOcorrencia}" />
                </attributes>
            </ObjectListItem>
        </List>
       
        <!-- Fim da Listagem mestre -->
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
               <!-- <Button icon="sap-icon://add" visible="{viewModel>/usuarioEhAuditor}" text="Nova Auditoria" press="onNovaAuditoria" type="Emphasized"/>-->
            </OverflowToolbar>
        </footer>
</Page>

</core:View>